# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here
PORT=5000
HOST=0.0.0.0

# Database Settings
FINSY_DB=app/db/finsy.db
USE_CLOUDANT=False
SQLITE_POOL_SIZE=5

# IBM Cloudant Settings
CLOUDANT_URL=https://your-cloudant-url.cloudant.com
CLOUDANT_API_KEY=your-cloudant-api-key
CLOUDANT_DB_NAME=finsy

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# ML Model Settings
RISK_MODEL=app/models/risk_model.pkl

# IBM Watson NLU Settings
ENABLE_NLU=False
NLU_API_KEY=your-nlu-api-key
NLU_URL=https://api.us-south.natural-language-understanding.watson.cloud.ibm.com/instances/your-instance-id
NLU_VERSION=2022-04-07

# IBM watsonx.ai Settings
ENABLE_WATSONX=False
WATSONX_API_KEY=your-watsonx-api-key
WATSONX_URL=https://us-south.ml.cloud.ibm.com
WATSONX_PROJECT_ID=your-project-id
WATSONX_MODEL_ID=meta-llama/llama-3-70b-instruct

# IBM watsonx Orchestrate Settings
ENABLE_ORCHESTRATE=False
ORCHESTRATE_API_KEY=your-orchestrate-api-key
ORCHESTRATE_URL=https://api.orchestrate.ibm.com
ORCHESTRATE_PROJECT_ID=your-project-id

# IBM Speech Services Settings
ENABLE_SPEECH=False
STT_API_KEY=your-stt-api-key
STT_URL=https://api.us-south.speech-to-text.watson.cloud.ibm.com/instances/your-instance-id
TTS_API_KEY=your-tts-api-key
TTS_URL=https://api.us-south.text-to-speech.watson.cloud.ibm.com/instances/your-instance-id

# Feature Flags
ENABLE_AUTH=True
LOG_LEVEL=INFO
